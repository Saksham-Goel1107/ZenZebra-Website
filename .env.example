# =========================================================================
# ZenZebra Website - Environment Variables Example
# =========================================================================
# This file serves as a template for your local .env file.
# Copy this file to .env and fill in the values.
# Do NOT commit your actual .env file to version control.

# -------------------------------------------------------------------------
# 1. Application Settings
# -------------------------------------------------------------------------
# The base URL of the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------------------------------------------------
# 2. Appwrite Configuration (Backend & Database)
# -------------------------------------------------------------------------
# Get these from your Appwrite Project Console (https://cloud.appwrite.io)
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_appwrite_project_id
NEXT_PUBLIC_APPWRITE_DATABASE_ID=your_appwrite_database_id

# Collection IDs
NEXT_PUBLIC_APPWRITE_LOCATIONS_COLLECTION_ID=locations
NEXT_PUBLIC_APPWRITE_HOME_LOCATIONS_COLLECTION_ID=home_locations
NEXT_PUBLIC_APPWRITE_SETTINGS_COLLECTION_ID=settings
NEXT_PUBLIC_APPWRITE_INQUIRIES_COLLECTION_ID=inquiries
NEXT_PUBLIC_APPWRITE_ANALYTICS_COLLECTION_ID=analytics_results
NEXT_PUBLIC_APPWRITE_PARTNER_REQUESTS_COLLECTION_ID=partner_requests

# Storage Bucket ID
NEXT_PUBLIC_APPWRITE_BUCKET_ID=your_appwrite_bucket_id

# Server-side API Key (Requires permissions for Database, Storage, Users, etc.)
# Create this in Project -> Settings -> API Keys
APPWRITE_API_KEY=your_appwrite_api_key

# -------------------------------------------------------------------------
# 3. Google Cloud & Analytics
# -------------------------------------------------------------------------
# Google Analytics Property ID (Found in GA4 Admin > Property Settings)
GA_PROPERTY_ID=your_ga_property_id

# Google OAuth Credentials (for Analytics access/Auth)
# Create at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# -------------------------------------------------------------------------
# 4. External API Keys & Integrations
# -------------------------------------------------------------------------
# Gemini AI (for Chatbot/Analytics) - https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key

# Pingram API (for Instagram integration) - https://pingram.io/
PINGRAM_API_KEY=your_pingram_api_key

# -------------------------------------------------------------------------
# 5. Monitoring & Observability
# -------------------------------------------------------------------------
# Sentry Auth Token (for symbol uploads)
# Create at https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# LangSmith (LangChain) Tracing - https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langchain_api_key
LANGCHAIN_PROJECT=ZenZebra

# -------------------------------------------------------------------------
# 6. Infrastructure & Deployment
# -------------------------------------------------------------------------
# Upstash Redis (for Caching/Rate Limiting) - https://console.upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Vercel Configuration (Required for CI/CD or CLI deployments)
VERCEL_TOKEN=your_vercel_token
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_TEAM_ID=your_vercel_team_id

# Doppler (Secrets Management) - https://doppler.com/
DOPPLER_TOKEN=your_doppler_token

# -------------------------------------------------------------------------
# 7. Internal Service URLs
# -------------------------------------------------------------------------
# Python Analytics Backend URL
PYTHON_ANALYTICS_URL=http://localhost:8000
# Shared secret for authenticating requests between services
ANALYTICS_SECRET_KEY=your_internal_analytics_secret_key
